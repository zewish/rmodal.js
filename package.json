{
  "name": "rmodal",
  "version": "1.0.37",
  "description": "A simple modal dialog with no external dependencies. IE9+ supported.",
  "main": "index.js",
  "module": "index.es.js",
  "jsnext:main": "index.es.js",
  "sideEffects": false,
  "scripts": {
    "lint": "eslint ./src/*.js",
    "test": "npm run lint && karma start --single-run",
    "build:umd": "rollup -f umd -c ./rollup.config.js -o ./dist/rmodal.js",
    "build:umd-min": "cross-env UGLIFY_JS=true rollup -f umd -c ./rollup.config.js -o ./dist/rmodal.min.js",
    "build:es": "rollup -f esm -c ./rollup.config.js -o ./index.es.js",
    "build:cjs": "rollup -f cjs -c ./rollup.config.js -o ./index.js",
    "build": "concurrently npm:build:umd npm:build:umd-min npm:build:es npm:build:cjs",
    "prepare": "npm run build && npm run test"
  },
  "files": [
    "dist",
    "index.js",
    "index.js.map",
    "index.es.js",
    "index.es.js.map",
    "index.d.ts"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/zewish/rmodal.js.git"
  },
  "keywords": [
    "modal",
    "dialog",
    "javascript",
    "simple",
    "plain",
    "browser",
    "browserify"
  ],
  "author": "Iskren Slavov <iskren.s@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/zewish/rmodal.js/issues"
  },
  "homepage": "https://rmodal.js.org/",
  "devDependencies": {
    "buble": "^0.19.8",
    "chai": "^4.2.0",
    "concurrently": "^4.1.2",
    "cross-env": "^6.0.0",
    "eslint": "^6.5.0",
    "istanbul": "^0.4.5",
    "istanbul-coveralls": "^1.0.3",
    "karma": "^4.3.0",
    "karma-chai": "^0.1.0",
    "karma-commonjs": "^1.0.0",
    "karma-coverage": "^2.0.1",
    "karma-coveralls": "^2.1.0",
    "karma-mocha": "^1.3.0",
    "karma-phantomjs-launcher": "^1.0.4",
    "karma-sinon": "^1.0.5",
    "mocha": "^6.2.0",
    "phantomjs-prebuilt": "^2.1.16",
    "rollup": "^1.22.0",
    "rollup-plugin-buble": "^0.19.8",
    "rollup-plugin-replace": "^2.2.0",
    "rollup-plugin-uglify": "^6.0.3",
    "rollup-stream": "^1.24.1",
    "sinon": "^7.5.0",
    "vinyl-buffer": "^1.0.1",
    "vinyl-source-stream": "^2.0.0"
  }
}
